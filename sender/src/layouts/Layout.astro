---
import '@/globals.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<html>
  <head>
    <meta charset='utf-8' />
    <meta name='description' content='Turn your iPad into a drawing tablet for your PC.' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+New:wght@300;400;500;700;900&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>

    <script is:inline>
      const theme = JSON.parse(localStorage.getItem('theme')) ?? 'system'
      const isDark =
        theme === 'dark' ||
        (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)
      document.documentElement.classList[isDark ? 'add' : 'remove']('dark')
      console.log({ isDark, theme })
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
