---
import '@/globals.css'
import '@fontsource/zen-kaku-gothic-new/300.css'
import '@fontsource/zen-kaku-gothic-new/400.css'
import '@fontsource/zen-kaku-gothic-new/500.css'
import '@fontsource/zen-kaku-gothic-new/700.css'
import '@fontsource/zen-kaku-gothic-new/900.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<html>
  <head>
    <meta charset='utf-8' />
    <meta name='description' content='Turn your iPad into a drawing tablet for your PC.' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>

    <script is:inline>
      const theme = JSON.parse(localStorage.getItem('theme')) ?? 'system'
      const isDark =
        theme === 'dark' ||
        (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)
      document.documentElement.classList[isDark ? 'add' : 'remove']('dark')
      console.log({ isDark, theme })
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
