---
import { App } from '@/components/App'
import { ToggleDarkMode } from '@/components/ToggleDarkMode.tsx'
import Layout from '@/layouts/Layout.astro'
---

<Layout title='Remote Stylus'>
  <Fragment slot='head'>
    <meta name='apple-mobile-web-app-capable' content='yes' />
    <meta name='apple-mobile-web-app-status-bar-style' content='black-translucent' />
    <meta name='mobile-web-app-capable' content='yes' />
  </Fragment>
  <div class='container mx-auto my-8'>
    <div class='flex flex-wrap items-center justify-between mb-8'>
      <h1 class='text-3xl font-bold flex flex-wrap gap-3 items-end'>
        <span>Remote Stylus</span>
      </h1>
      <div class='flex items-center gap-6'>
        <a href='/' class='font-bold text-accent-foreground'>Reload</a>
        <ToggleDarkMode client:load />
      </div>
    </div>
    <App client:only />
  </div>
</Layout>
